<script type="text/javascript" src="../js/index.js"></script>

<div class="jumbotron text-center">
    <h1 class="display-4">Comments for:</h1>
    <p class="lead">{{article.headline}}</p>
    <a class="btn btn-primary" href="/">Back to Main Page</a>
</div>

{{#unless comments}}
<div class="container">
    <h1>There are no comments for this article.</h1>
</div>
{{/unless}}

{{#if comments}}
<div class="container">
    {{#each comments}}
    <div class="card my-4">
        <div class="card-body">
            <h5 class="card-title">{{this.user}} said:</h5>
            <p class="card-text">{{this.comment}}</p>
            <a class="btn btn-danger comment-delete" data-comment={{_id}} data-article={{articleId}}>Delete</a>
        </div>
    </div>
    {{/each}}
</div>
{{/if}}

<div class="container">
    <form>
        <div class="form-group">
            <label for="user">Username</label>
            <input type="text" class="form-control" id="user">
        </div>
        <div class="form-group">
            <label for="comment">Comment</label>
            <textarea class="form-control" id="comment"></textarea>
        </div>
        <button type="submit" id="comment-submit" data-article={{article._id}} class="btn btn-primary">Submit</button>
    </form>
</div>